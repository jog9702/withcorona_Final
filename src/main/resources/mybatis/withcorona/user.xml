<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.user">
	
	<update id="edit" parameterType="com.with.corona.vo.UserVO">
		update
			user_info
		set
			user_password = #{userPassword},
			user_name = #{userName},
			user_email = #{userEmail},
			user_gender = #{userGender}
		where
			user_id = #{userId}
	</update>
	
	<delete id="commentDelete" parameterType="java.lang.String">
		delete from
			comment_info
		where
			user_id = #{id}
	</delete>
	
	<delete id="boardDelete" parameterType="java.lang.String">
		delete from
			board_info
		where
			user_id = #{id}
	</delete>
	
	<delete id="userDelete" parameterType="java.lang.String">
		delete from
			user_info
		where
			user_id = #{id}
	</delete>
	
	
	
</mapper>